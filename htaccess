RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^products/categories/(.*)/(.*)$ /list.php?action=browser&category=$1&page=$2 [L,QSA]
RewriteRule ^products/categories/(.*)$ /list.php?action=browser&category=$1 [L,QSA]
RewriteRule ^products/(.*)/(.*)$ /product.php?pid=$1 [L,QSA]
RewriteRule ^images/(.*)/(.*)$ /framework/image.php?pid=$1 [L,QSA]
RewriteRule ^images/(.*)$ /framework/image.php?pid=$1 [L,QSA]
RewriteRule ^shop/cart/images/(.*)\.jpg$ /framework/image.php?pid=$1 [L,QSA]
RewriteRule ^shop/cart/add$ /manage_cart.php?action=add [L,QSA]
RewriteRule ^shop/cart/add/(.*)/(.*)$ /manage_cart.php?action=added&pid=$1 [L,QSA]
RewriteRule ^shop/cart/add/(.*)$ /manage_cart.php?action=add&cart_pid=$1&cart_qty=1 [L,QSA]
RewriteRule ^shop/cart/view$ /manage_cart.php?action=view [L,QSA]
RewriteRule ^shop/cart/remove/(.*)$ /manage_cart.php?action=remove&pid=$1 [L,QSA]
RewriteRule ^shop/cart/continue$ /manage_cart.php?action=continue [L,QSA]
RewriteRule ^shop/cart/shipping$ /manage_cart.php?action=shipping [L,QSA]
RewriteRule ^shop/cart/billing$ /manage_cart.php?action=billing [L,QSA]
RewriteRule ^shop/cart/confirm$ /manage_cart.php?action=confirm [L,QSA]
RewriteRule ^profile/login$ /user.php?action=login [L,QSA]
RewriteRule ^profile/logout$ /user.php?action=logout [L,QSA]
RewriteRule ^profile/view$ /user.php [L,QSA]
RewriteRule ^profile/account$ /user.php?action=account [L,QSA]
RewriteRule ^profile/account/update$ /user.php?action=accountupdate [L,QSA]
RewriteRule ^profile/info$ /user.php?action=info [L,QSA]
RewriteRule ^profile/info/update$ /user.php?action=infoupdate [L,QSA]
RewriteRule ^profile/billing$ /user.php?action=billaddress [L,QSA]
RewriteRule ^profile/billing/update$ /user.php?action=billupdate [L,QSA]
RewriteRule ^profile/shipping$ /user.php?action=shipaddress [L,QSA]
RewriteRule ^profile/shipping/update$ /user.php?action=shipupdate [L,QSA]
RewriteRule ^profile/password/update$ /user.php?action=changepassword [L,QSA]
RewriteRule ^profile/authenticate$ /user.php?action=auth [L,QSA]
RewriteRule ^profile/new$ /user.php?action=new [L,QSA]
RewriteRule ^profile/recovery$ /user.php?action=recovery [L,QSA]
RewriteRule ^profile/history$ /user.php?action=history [L,QSA]
RewriteRule ^profile/order/(.*)$ /user.php?action=order&ordid=$1 [L,QSA]
RewriteRule ^profile/order$ /user.php?action=order [L,QSA]
